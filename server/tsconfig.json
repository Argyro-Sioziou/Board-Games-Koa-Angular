{
  "compilerOptions": {
      "moduleResolution": "node",
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": true,
      "outDir": "./dist",
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "paths": {
        "@/*": ["./src/*"]
      },
  },
  "include": [
    "**/*.ts",
    "types/*.ts"
  ],
}